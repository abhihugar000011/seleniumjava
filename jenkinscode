pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/abhihugar000011/seleniumjava.git'
                    ]]
                ])
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Run JUnit Tests') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Run Java Main Files Dynamically') {
            steps {
                script {
                    // Find all Java files in src/test/java and src/main/java
                    def javaFiles = findFiles(glob: 'src/{main,test}/java/**/*.java')

                    // Filter to only files containing a main method
                    def mainJavaFiles = javaFiles.findAll { file ->
                        def text = readFile(file.path)
                        return text.contains('public static void main')
                    }

                    if (mainJavaFiles.isEmpty()) {
                        echo "No Java files with main() method found."
                        return
                    }

                    // Compile all main files
                    bat """
                        javac -cp target/classes;src/main/java;src/test/java ${mainJavaFiles.collect { it.path }.join(' ')} -d target/classes
                    """

                    // Run each main file
                    mainJavaFiles.each { file ->
                        def pkg = ''
                        def text = readFile(file.path)
                        def pkgMatch = text =~ /package\s+([\w\.]+);/
                        if (pkgMatch) {
                            pkg = pkgMatch[0][1] + '.'
                        }
                        def className = file.name.replace('.java', '')
                        echo "Running: ${pkg}${className}"
                        bat "java -cp target/classes ${pkg}${className}"
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
