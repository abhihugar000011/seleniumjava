pipeline {
    agent any
    
    environment {
        // Optional: Store GitHub credentials in Jenkins (recommended)
        GIT_CREDENTIALS = credentials('GITHUB_CREDENTIALS_ID') // Replace with your Jenkins credentials ID
    }
    
    stages {
        // Stage 1: Checkout from YOUR repository (not 'your-repo')
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/abhihugar000011/seleniumjava.git',
                        credentialsId: 'GITHUB_CREDENTIALS_ID' // Replace with your Jenkins credentials ID
                    ]]
                ])
            }
        }
        
        // Stage 2: Build with Maven
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
        
        // Stage 3: Run TestNG/JUnit tests
        stage('Run Unit Tests') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/**/*.xml'
                }
            }
        }
        
        // Stage 4: Run standalone Java program (if needed)
        stage('Run Normal Java Code') {
            steps {
                sh 'java -cp target/classes com.example.MainClass' // Adjust classpath as needed
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: 'target/**/*.xml', allowEmptyArchive: true
        }
    }
}
