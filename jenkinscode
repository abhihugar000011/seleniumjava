pipeline {
    agent any

    tools {
        maven 'Maven3'  // Must be configured in Jenkins -> Global Tool Configuration
        jdk 'JDK17'     // Must be configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/abhihugar000011/seleniumjava.git'
                    ]]
                ])
            }
        }

        stage('Build Project') {
            steps {
                bat 'mvn clean compile' // Windows uses 'bat', not 'sh'
            }
        }

        stage('Run JUnit Tests') {
            steps {
                bat 'mvn test' // Runs both JUnit & TestNG if configured in pom.xml
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Run TestNG Tests') {
            steps {
                // Ensure your pom.xml has TestNG plugin & testng.xml configured
                bat 'mvn test -DsuiteXmlFile=testng.xml'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Run Normal Java Program') {
            steps {
                bat 'javac src/main/java/com/example/Main.java -d target/classes'
                bat 'java -cp target/classes com.example.Main'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
