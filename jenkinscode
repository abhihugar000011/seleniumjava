pipeline {
    agent any
    
    stages {
        // Stage 1: Checkout code from public repo
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/abhihugar000011/seleniumjava.git'
                    ]]
                ])
            }
        }
        
        // Stage 2: Build with Maven
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
        
        // Stage 3: Run tests
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    // Publish test results
                    junit 'target/surefire-reports/**/*.xml'
                    // Archive test reports
                    archiveArtifacts artifacts: 'target/surefire-reports/**/*.xml', allowEmptyArchive: true
                }
            }
        }
    }
    
    post {
        always {
            // Optional: Clean up workspace
            cleanWs()
        }
    }
}
