pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/abhihugar000011/seleniumjava.git'
                    ]]
                ])
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Run JUnit Tests') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Run Example1.java') {
            steps {
                bat 'javac -cp target/classes;src/test/java src/test/java/basic_Example/Example1.java -d target/classes'
                bat 'java -cp target/classes basic_Example.Example1'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
